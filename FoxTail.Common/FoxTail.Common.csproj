<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>FoxTail.Common</RootNamespace>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <Authors>KyuubiRan</Authors>
        <Title>FoxTail.Common</Title>
        <PackageProjectUrl>https://github.com/KyuubiRan/FoxTail.Net</PackageProjectUrl>
        <Version>0.1.0</Version>
        <Description>A functional utility library for C#.</Description>
        <PackageReadmeFile>README.MD</PackageReadmeFile>
        <RepositoryUrl>https://github.com/KyuubiRan/FoxTail.Net</RepositoryUrl>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
        <LangVersion>13</LangVersion>
    </PropertyGroup>

    <ItemGroup>
      <None Include="..\LICENSE">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </None>
      <None Include="..\README.MD">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </None>
    </ItemGroup>

</Project>
